---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Núcleo Avançado de Desenvolvimento"> 
	<main>
		<div class="container-fluid text-center carousel">
		  <div class="row">
			  <div class="col-lg-12" style="padding: 0px;">
				  <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
					  <div class="carousel-inner">
						  <div class="carousel-item active">
							  <img src="https://cdn.nad-edu.com.br/wp-content/uploads/2023/06/Banner-site-Enfermagem-PED-NEO-webp.webp" class="d-block w-100" alt="...">
						  </div>
						  <div class="carousel-item">
							<img src="https://cdn.nad-edu.com.br/wp-content/uploads/2023/06/Banner-site-Fisioterapia-webp.webp" class="d-block w-100" alt="...">
						  </div>
						  <div class="carousel-item">
							<img src="https://cdn.nad-edu.com.br/wp-content/uploads/2023/06/Enf.-em-Obstetricia-webp.webp" class="d-block w-100" alt="...">
						  </div>
					  </div>
					  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleSlidesOnly" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Previous</span>
					  </button>
					  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleSlidesOnly" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Next</span>
					  </button>
				  </div>
			  </div>
		  </div>
		</div>
	
		<div class="container-fluid pt-5 pb-2 text-center saocamilo-area">
		  
		  <div class="row">
			<div class="col-md-6 mb-5 mx-auto my-auto">
			  <img src="https://cdn.nad-edu.com.br/wp-content/uploads/2021/08/logo_horizontal_centro_universitario_sao_camilo.png" class="saocamilo-logo" alt="" width="210" height="auto">
			</div>
			<div class="col-md-6 mx-auto my-auto">
			  <img src="https://cdn.nad-edu.com.br/wp-content/uploads/2023/06/QR-Code_E-MEC-e1669383441847-webp.webp" class="mec-code" alt="" width="340px" height="auto">
			</div>
		  </div>
	
		  <div class="row my-5">
			<div class="col-12 mx-auto">
			  <a data-bs-toggle="collapse" href="#polos" role="button" aria-expanded="false" aria-controls="polos">
			  <img src="https://www.nad-edu.com.br/wp-content/uploads/2022/09/Area-exlusiva-e1663865540355.png" class="area-exclusiva" alt="" width="230px" height="auto">
			  </a>
			</div>
		  </div>
	
		  <div class="row my-5 collapse" id="polos">
			<div class="col-12 col-md-3 ms-auto my-3">
			  <p class="polo-title"> Polo de Ensino <br> Juazeiro do Norte </p>
			  <hr class="polo-line mx-auto">
			  <a class="polo-button btn py-2 px-3" href="#!">Acessar</a>
			  <p class="polo-title mt-5"> Polo de Ensino <br> Crato </p>
			  <hr class="polo-line mx-auto">
			  <a class="polo-button btn py-2 px-3" href="#!">Acessar</a>
			</div>
			<div class="col-12 col-md-3 me-auto mt-3 mb-1">
			  <p class="polo-title mt-3 mt-md-0"> Polo de Ensino <br> Santarém </p>
			  <hr class="polo-line mx-auto">
			  <a class="polo-button btn py-2 px-3" href="#!">Acessar</a>
			  <p class="polo-title mt-5"> Polo de Ensino <br> Itapipoca </p>
			  <hr class="polo-line mx-auto">
			  <a class="polo-button btn py-2 px-3" href="#!">Acessar</a>
			</div>
		  </div>
		</div>
	
		<div class="container-fluid py-5 text-center contato-area">
		  <div class="row">
			<h4 class="pt-4" style="font-weight: 700; letter-spacing: normal;">ENTRE EM CONTATO!</h4>
			<hr class="line mx-auto">
			<p class="pt-2" style="font-weight: 400; font-size: 13px;"> Preencha o formulário abaixo e aguarde nosso retorno! </p>
		  </div>
		  <div class="row my-5">
			<div class="col-12 col-md-4">

				<Card href='#' icon="bi bi-whatsapp" body='(88) 2155-1646'/>

				<Card href='#' icon="bi bi-geo-alt-fill" body='Rua Catulo da Paixão Cearense, nº 175, sala 1306'/>
			
				<Card href='#' icon="bi bi-telephone-fill" body='(88) 2131-9977'/>

				<Card href='#' icon="bi bi-envelope" body='atendimento@nad-edu.com.br'/>

			</div>
			<div class="col-12 col-md-8 text-start mt-2 mt-md-0">
			  <p class="pt-2" style="font-weight: 500; font-size: 14px;"> Campos marcados com <span class="obrigatorio">*</span> são obrigatórios. </p>
			  <form id="contact">
				<div class="col-12 col-md-6 mb-3">
				  <label for="exampleFormControlInput1" class="form-label">Nome: <span class="obrigatorio">*</span></label>
				  <input name="Nome" type="text" class="form-control" id="exampleFormControlInput1" required>
				</div>
				<div class="col-12 col-md-6 mb-3">
				  <label for="exampleFormControlInput2" class="form-label">E-mail: <span class="obrigatorio">*</span></label> 
				  <input name="Email" type="email" class="form-control" id="exampleFormControlInput2" required>
				</div>
				<div class="col-12 col-md-6 mb-3">
				  <label for="exampleFormControlInput3" class="form-label">Telefone: <span class="obrigatorio">*</span></label>
				  <input name="Telefone" type="tel" class="form-control" id="exampleFormControlInput3" required>
				</div>
				<div class="col-12 col-md-6 mb-3">
				  <label for="exampleFormControlInput4" class="form-label">Assunto: </label>
				  <input name="Assunto" type="text" class="form-control" id="exampleFormControlInput4">
				</div>
				<div class="col-12 col-md-8 mb-3">
				  <label for="exampleFormControlTextarea1" class="form-label">Mensagem: <span class="obrigatorio">*</span></label>
				  <textarea name="Mensagem" class="form-control" id="exampleFormControlTextarea1" rows="3" required></textarea>
				</div>
				<button type="submit" class="btn btn-form py-2 px-3">
					<span id="button-text" role="status">Enviar</span>
					<span id="load-spinner" class="spinner-border spinner-border-sm visually-hidden" aria-hidden="true"></span>
  					<span id="load-text" class="visually-hidden" role="status">Enviando...</span>
				</button>
			  </form>
			</div>
		  </div>
		</div>
	
		<div class="container-fluid m-0 p-0">
		  <div class="row">
			<div class="col">
			  <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3958.131539085403!2d-39.32691492506115!3d-7.22583399278014!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x7a1836ebbfb3c11%3A0x5114d79922f7e8c!2sN%C3%BAcleo%20Avan%C3%A7ado%20de%20Desenvolvimento!5e0!3m2!1spt-BR!2sbr!4v1687817470398!5m2!1spt-BR!2sbr" width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
			</div>
		  </div>
		</div>
	</main>

	<script>
		var form = document.getElementById("contact");
		form.addEventListener("submit", ajaxpost);
		function ajaxpost(event) {
			event.preventDefault();
			document.getElementById("load-spinner").classList.toggle("visually-hidden");
			document.getElementById("load-text").classList.toggle("visually-hidden");
			document.getElementById("button-text").classList.toggle("visually-hidden");

			// (A) GET FORM DATA
			var data = new FormData(form);
			data.append('From', 'nadclone');
			
			// (B) AJAX REQUEST
			// (B1) POST DATA TO SERVER, RETURN RESPONSE AS TEXT
			fetch("https://script.google.com/macros/s/AKfycbz9m5HZ9tr3ObEpIxcSq6qa7JEPUCxwyUsIZE97w1yH5g7og4L_CbdHdPTXki-9g64M/exec", 
			{ method:"POST", body:data })
			.then(res => res.json())
			
			// (B2) SHOW MESSAGE ON SERVER RESPONSE
			.then(response => {
				
				document.getElementById("load-spinner").classList.toggle("visually-hidden");
				document.getElementById("load-text").classList.toggle("visually-hidden");
				document.getElementById("button-text").classList.toggle("visually-hidden");

				if (response.result == "success") { 
					form.reset(); 
					alert("Sucesso! Entraremos em contato em breve."); 
				}
				else { alert("Algo deu errado :( \nPor favor, recarregue a página e tente novamente."); }
			})
			
			// (B3) OPTIONAL - HANDLE FETCH ERROR
			.catch(err => console.error(err));

			// (C) PREVENT FORM SUBMIT
			return false;
		}
	</script>
</Layout>

<style>
	.saocamilo-area{
		background-color: #E4E4E4C4;
		background-image: url(https://www.nad-edu.com.br/wp-content/uploads/2023/06/pattern-webp.webp);
	}

	.polo-title{
		color: #AF0C32;
		font-size: 18px;
		font-weight: 600;
		letter-spacing: 0;
		line-height: 1.2em;
	}

	.polo-button{
		background-color: #AF0C32;
		color: #fff;
		font-size: 14px;
		font-weight: 500;
		letter-spacing: 0;
	}

	.polo-button:focus, .polo-button:hover, .polo-button:active {
		background-color: #AF0C32aa !important;
		color: #fff !important;
	}

	.polo-line{
		width: 100px;
		border: 2px solid #af0c32;
		border-radius: 25px;
		opacity: 1;
	}

	.contato-area{
		background-image: url(https://www.nad-edu.com.br/wp-content/uploads/2023/06/pattern-webp.webp);
	}

	.line{
		width: 60px;
		border: 2px solid #af0c32;
		border-radius: 25px;
		opacity: 1;
	}

	.obrigatorio{
		color: red;
	}

	.form-label{
		font-size: 15px;
		font-weight: 600;
	}

	.btn-form{
		color: #fff;
		background-color: #333;
	}

	.btn-form:focus, .btn-form:hover, .btn-form:active {
		color: #fff !important;
		background-color: #555 !important;
	}

	@media (min-width: 500px) {
		.mec-code{
			width: 450px;
		}
		.saocamilo-logo{
			width: 260px;
		}
		.area-exclusiva{
			width: 260px;
		}
	}

	@media (min-width: 768px) {
		/* medium breakpoint */
	}
</style>
 