---
import "bootstrap/dist/css/bootstrap.min.css";
import { WHATSAPP_LINK } from '../consts';


export interface Props {
	title: string;
    description?: string;
    ogImage: string;
    pos?: boolean;
}

const { title, ogImage, pos = true, description = 
`A Pós-Graduação ${title} tem como objetivo formar profissionais 
através de uma proposta pedagógica que ressalta conteúdos cientificamente 
validados e agregar o aumento do desempenho através da potencialização e desenvolvimento 
de habilidades e competências essenciais para esta área de atuação.` } = Astro.props;

