---
import bootstrapcss from "bootstrap/dist/css/bootstrap.min.css?url";
import bootstrapjs from "bootstrap/dist/js/bootstrap.bundle.min.js?url";
import bootstrapicons from "bootstrap-icons/font/bootstrap-icons.min.css?url";
import { WHATSAPP_LINK } from '../consts';

export interface Props {
	title: string;
    ogImage: string;
}

const { title, ogImage } = Astro.props;

---

<!DOCTYPE html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

        <meta name="description" property="og:description" content={`A Pós-Graduação ${title} tem como objetivo formar profissionais 
                                                                    através de uma proposta pedagógica que ressalta conteúdos cientificamente 
                                                                    validados e agregar o aumento do desempenho através da potencialização e desenvolvimento 
                                                                    de habilidades e competências essenciais para esta área de atuação.`}>
		<meta name="generator" content={Astro.generator} />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://cdn.nad-edu.com.br" rel="preconnect">

        <meta property="og:image" content={ogImage}>
        <link rel="icon" href="https://cdn.nad-edu.com.br/wp-content/uploads/2022/04/cropped-logo_oficial_survey_monkey-192x192.png" sizes="192x192">
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
		<script src={bootstrapjs}> </script>
		<link rel="stylesheet" href={bootstrapcss}>
		<link rel="stylesheet" href={bootstrapicons}>

		<title>{`Pós-Graduação: ${title}`}</title>
	</head>
	<body>
        <slot />
        <a href={WHATSAPP_LINK} class="float" target="_blank">
            <i class="bi bi-whatsapp my-float"></i>
        </a>
    </body>
    <style is:global>
        html, body {
            overflow-x: hidden;
        }

        body {
            position: relative;
            font-size: 14px;
            font-family: "Montserrat", sans-serif;
            letter-spacing: .7px;
        }

        .float{
            position:fixed;
            width:60px;
            height:60px;
            bottom:40px;
            right:30px;
            background-color:#25d366;
            color:#FFF;
            border-radius:50px;
            text-align:center;
            font-size:30px;
            box-shadow: 2px 2px 3px #999;
            z-index:100;
        }

        .my-float{
            position: absolute;
            top: 8px;
            right: 13px;
        }
    </style>
</html>